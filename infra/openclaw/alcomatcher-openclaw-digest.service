[Unit]
Description=AlcoMatcher OpenClaw KPI Digest
After=network.target

[Service]
Type=oneshot
User=root
WorkingDirectory=/opt/alcomatcher
Environment=TELEGRAM_TARGET=593360085
Environment=API_BASE=http://127.0.0.1:3000
Environment=ALERT_STATE_DIR=/var/tmp/alcomatcher-openclaw/state
Environment=DIGEST_WINDOW_HOURS=24
ExecStart=/bin/bash /opt/alcomatcher/infra/openclaw/send-kpi-digest.sh
