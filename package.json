{
  "name": "alcomatcher",
  "version": "0.1.0",
  "private": true,
  "description": "AlcoMatcher scanner-first compliance platform",
  "workspaces": [
    "apps/server",
    "apps/web"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace @alcomatcher/server",
    "dev:web": "npm run dev --workspace @alcomatcher/web",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
